            "PHPay\\Efi\\": "src/Gateways/Efi/",
            "Efi\\": "src/Gateways/Efi/",
            "AsaasCustomer\\": "src/Gateways/Asaas/Resources/Customer/"
        }
    },
    "authors": [
        {
            "name": "MÃ¡rio Lucas",
            "email": "mariolucasdev@gmail.com"
        }
    ],
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "require": {
        "php": "^8.1",
        "ext-curl": "*",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "pestphp/pest": "3.5",
        "laravel/pint": "^1.18",
        "phpstan/phpstan": "^2.0",
        "nunomaduro/termwind": "^2.3"
